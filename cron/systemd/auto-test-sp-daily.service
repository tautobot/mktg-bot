[Unit]
Description=Automation Test For Sponsored Purchase
#OnFailure=unit-status-mail@%n.service

[Service]
# oneshot services can have multiple ExecStart lines
Type=oneshot
User=autoarmour
PIDFile=/var/run/autoarmour/auto-test-sp-daily.pid
WorkingDirectory=/opt/autoarmour/assurance
ExecStartPre=/bin/mkdir -p /var/run/autoarmour
ExecStartPre=/bin/chown autoarmour:autoarmour /var/run/autoarmour
ExecStart=/opt/autoarmour/assurance/cron/scripts/automation_sponsored_purchase.sh
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=auto-test-sp-daily
